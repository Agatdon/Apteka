                <CheckBox Style="{DynamicResource CheckBoxStyle1}" Grid.Row="6" Content="asds"/>

                <!--  user datagrid-->
                <Grid Grid.Row="5">
                    <StackPanel VerticalAlignment="Center"
                                Margin=" 75 0">
                        <TextBox Style="{StaticResource textboxSearch}"
                                 Name="namex"
                                 Text="imię i nazwisko"
                                 BorderBrush="#c5c8cc"
                                 BorderThickness=" 0 0 0 1.5"/>
                        <TextBox Style="{StaticResource textboxSearch}"
                                 Name="mailx"
                                 Text=" adres e-mail"
                                 BorderBrush="#c5c8cc"
                                 BorderThickness=" 0 0 0 1.5" />
                        <TextBox Style="{StaticResource textboxSearch}"
                                 Name="messagex"
                                 Text=" Wiadomość..."
                                 BorderBrush="#c5c8cc"
                                 BorderThickness=" 0 0 0 1.5"
                                 Height="300"/>
                        <Button Content="Wyślij"
                                Style="{StaticResource menuButton}" Click="SendButton_Click"/>
                    </StackPanel>
                </Grid>
